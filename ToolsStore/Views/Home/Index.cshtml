@model IEnumerable<ToolsStore.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>The Best Tools Store Ever.</h1>

</div>
<h3><em>Top</em> seling tools.</h3>

<div class="row">

    @foreach (var product in Model)
    {
        <div class="col-md-4 column productbox">
            <img id="img-product" class="img-responsive" alt="@product.Title" src="@product.ProductImgUrl" />
            <div class="producttitle">
                   <h3>@product.Title</h3>
                </div>
            <div class="productprice">
                <div class="pull-right">
                    <a href="@Url.Action("Details", "Store", new { id = product.ProductId })" class="btn btn-primary" role="button">
                        Details
                    </a>
                </div>
                <div class="pricetext">
                    <p>
                        @Html.DisplayFor(modelItem => product.Price)
                    </p>
                </div>
            </div>
        </div>
    }

</div>
