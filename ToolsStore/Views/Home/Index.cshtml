@model IEnumerable<ToolsStore.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>The Best Tools Store Ever.</h1>

</div>
<h3><em>Top</em> seling tools.</h3>

<div class="row">

    @foreach (var product in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details", "Store", new { id = product.ProductId })">
                    <img id="img-size" class="img-responsive" alt="@product.Title" src="@product.ProductImgUrl" />
                </a>
                <div class="caption">
                    <h3>@product.Title</h3>
                    <p>@product.Price</p>
                    <a href="@Url.Action("Details", "Store", new { id = product.ProductId })" class="btn btn-primary" role="button">
                        Details
                    </a>
                </div>
            </div>
        </div>
    }

</div>
